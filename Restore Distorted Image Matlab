figure,imagesc(Cam1d);
title("Original image")
colormap(gray);


g=fftshift(fft2(Cam1d));
figure,imagesc(abs(g));
title("Transform")
colormap(gray);

amp=log(abs(g)); 
minv=min(amp);
maxv=max(amp);

ampthreshold=13;

brightpixel=amp>ampthreshold;
brightpixel(:,76:185)=0;
g(brightpixel)=0;

filter=ifft2(ifftshift(g));
amp=log(abs(filter));
maxv=max(max(amp)); 
minv=min(min(amp));


figure,imshow(amp, [minv maxv]);
title("Retrieved Image")
colormap(gray);
